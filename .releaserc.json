{
  "$schema": "https://json.schemastore.org/semantic-release.json",
  "branches": [
    "main",
    {
      "name": "develop",
      "prerelease": "beta"
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "type": "refactor",
            "release": "patch"
          },
          {
            "type": "docs",
            "scope": "README",
            "release": "patch"
          },
          {
            "type": "chore",
            "release": false
          },
          {
            "type": "style",
            "release": false
          },
          {
            "type": "test",
            "release": false
          },
          {
            "type": "build",
            "release": false
          },
          {
            "type": "ci",
            "release": false
          },
          {
            "breaking": true,
            "release": "major"
          }
        ],
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES",
            "BREAKING"
          ]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "perf",
              "section": "‚ö° Performance Improvements"
            },
            {
              "type": "refactor",
              "section": "‚ôªÔ∏è Code Refactoring"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            },
            {
              "type": "style",
              "section": "üíé Styles",
              "hidden": true
            },
            {
              "type": "chore",
              "section": "üîß Miscellaneous Chores",
              "hidden": true
            },
            {
              "type": "test",
              "section": "‚úÖ Tests",
              "hidden": true
            },
            {
              "type": "build",
              "section": "üèóÔ∏è Build System",
              "hidden": true
            },
            {
              "type": "ci",
              "section": "üë∑ CI/CD",
              "hidden": true
            }
          ]
        },
        "writerOpts": {
          "commitsSort": [
            "subject",
            "scope"
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html)."
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "sed -i.bak 's/VERSION *= *\"[^\"]*\"/VERSION = \"${nextRelease.version}\"/' main.go && rm -f main.go.bak"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "main.go"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": false,
        "failComment": false,
        "releasedLabels": [
          "released"
        ]
      }
    ]
  ]
}
